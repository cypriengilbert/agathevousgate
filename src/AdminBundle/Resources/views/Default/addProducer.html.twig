{% extends 'templateadmin.html.twig' %}



{% block script_calcul %}

{% endblock %}

{% block body %}




<div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <legend>Ajouter un producteur</legend>
                            </div>
                            <div class="content">
                                    {{ form_start(form, {'attr': { 'class': 'form-horizontal' } }) }}

                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.name, "Nom de l'atelier de production", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-10">
                                                {{ form_errors(form.name) }}
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.adresse1, "Adresse", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-10">
                                                {{ form_errors(form.adresse1) }}
                                                {{ form_widget(form.adresse1, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.adresse2, "Adresse (suite)", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-10">
                                                {{ form_errors(form.adresse2) }}
                                                {{ form_widget(form.adresse2, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.zipcode, "Code postal", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-4">
                                                {{ form_errors(form.zipcode) }}
                                                {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                            {{ form_label(form.city, "Ville", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-4">
                                                {{ form_errors(form.city) }}
                                                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.phone, "Téléphone", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-10">
                                                {{ form_errors(form.phone) }}
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.email, "e-mail", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-10">
                                                {{ form_errors(form.email) }}
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            {{ form_label(form.active, "Active ?", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                            <div class="col-sm-10">
                                                <div class="switch has-switch">
                                                    <div class={% if producer.active and producer.active == true %}"switch-on"{% else %}"switch-off"{% endif %}>
                                                {{ form_errors(form.active) }}
                                                {{ form_widget(form.active, {'attr': {'class': 'form-control', 'data-toggle' : 'switch'}}) }}
                                                     <span class="switch-left">ON</span><label>&nbsp;</label><span class="switch-right">OFF</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>


                                    <div class="col-md-12">
                                     <input type="submit" value="Valider" style="width:100%; margin-top:-30px;" class="btn btn-fill btn-primary" />
                                     </div>


                                    {{ form_end(form) }}

</div>








       <script src="{{ asset('admin/assets/js/bootstrap-checkbox-radio-switch-tags.js')}}"></script>


{% endblock %}

