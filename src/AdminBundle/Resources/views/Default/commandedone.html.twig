{% extends 'templateadmin.html.twig' %}



{% block script_calcul %}

{% endblock %}

{% block body %}



<div class="mdl-grid demo-content">
<div><h4>Chiffres d'affaires 2016</h4></div>
  <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid" style="height:60%; padding:20px;">
  <table id="commande_en_cours" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
           <tr>
               <th>ID</th>
               <th>Acheteur</th>
               <th>Adresse de livraison</th>
               <th>Date de commande</th>
               <th>Produit</th>
               <th>Action</th>
           </tr>
       </thead>

       <tbody>
            {% for commande in listeCommande %}
                <tr>
                  <td>{{ commande.id }}</td>
                  <td>{{ commande.client.prenom }} {{ commande.client.nom }}</td>
                  <td>{{ commande.client.adress.adress }} <br> {{ commande.client.adress.zipcode }} {{ commande.client.adress.city }} </td>
                  <td>{{ commande.date|date("d-m-Y") }}</td>
                  <td>
                      {% for product in commande.addedproducts %}
                        {{ product.product.name }} : {{ product.quantity }}<br>
                      {% endfor %}
                  </td>
                  <td> </td>
              </tr>
            {% endfor %}
       </tbody>
  </table>

  </div>




{% endblock %}

