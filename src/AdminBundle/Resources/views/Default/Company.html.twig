{% extends 'templateadmin.html.twig' %}



{% block script_calcul %}

{% endblock %}

{% block body %}


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                      {{ form_start(formCompany, {'attr': { 'class': '' } }) }}

                     
                         <div class="card">
                            <div class="header">
                                <h4 class="title">Boutique n°{{user.company.id}}</h4>
                            </div>
                            <div class="content">
                                <form>
                                    <div class="row">
                                        <div class="col-md-5">
                                             <div class="form-group" >
                                              {{ form_label(formCompany.name, "Nom de l'entreprise", {'label_attr': {'class': '', 'id': '' }}) }}
                                              {{ form_errors(formCompany.name) }}
                                              {{ form_widget(formCompany.name, {'attr': {'class': 'form-control'} })}}
                                          </div>    
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                 {{ form_label(formCompany.siren, "SIREN", {'label_attr': {'class': '', 'id': '' }}) }}
                                              {{ form_errors(formCompany.siren) }}
                                              {{ form_widget(formCompany.siren, {'attr': {'class': 'form-control'} })}}
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                {{ form_label(formCompany.reductionGeneric, "Réduction par défaut ", {'label_attr': {'class': '', 'id': '' }}) }}
                                              {{ form_errors(formCompany.reductionGeneric) }}
                                              {{ form_widget(formCompany.reductionGeneric, {'attr': {'class': 'form-control'} })}}
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Prénom</label>
                                                <input type="text" class="form-control" placeholder="First name" disabled value="{{user.prenom}}">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Nom</label>
                                                <input type="text" class="form-control" placeholder="Last Name" disabled  value="{{user.nom}}">
                                            </div>
                                        </div>
                                         <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Téléphone</label>
                                                <input type="text" class="form-control" placeholder="phone" disabled  value="{{user.phone}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input type="text" class="form-control" placeholder="Email" disabled value="{{user.email}}">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Adress</label>
                                                <input type="text" class="form-control" placeholder="Home Address" disabled value="{{user.adress.adress}}">
                                            </div>
                                        </div>
                                    </div>
                                    {% if user.adress.adressMore %}
                                     <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Adresse (suite)</label>
                                                <input type="text" class="form-control" placeholder="Home Address" disabled value="{{ user.adress.adressMore }}">
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Ville</label>
                                                <input type="text" class="form-control" placeholder="City"  disabled value="{{user.adress.city}}">
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Code postal</label>
                                                <input type="number" class="form-control"  disabled value="{{user.adress.zipcode}}">
                                            </div>
                                        </div>
                                    </div>


                                  {% if user.isPro == 2 %}
                                    <a href="{{path('companyDeactivate', {'id': user.id })}}">

                                   <button type="submit" class="btn btn-danger btn-fill pull-left">Supprimer le statut pro</button></a>
                                   {% else %}
                                   <a href="{{path('companyValidation', {'id': user.id })}}">
                                    <button type="submit" class="btn btn-warning  btn-fill pull-left">Valider le statut pro</button></a>
</a>
                                   {% endif %} 

                                    <button type="submit"  onclick="return confirm('Cela écrasera les anciennes réductions par défaut. Continuer ?')" class="btn btn-info btn-fill pull-right">Mettre à jour</button>
                                     {{ form_end(formCompany) }}

                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Historique</h4>
                                <p class="category">de commandes</p>
                            </div>
                            <div class="content">
                                <div class="table-full-width">
                                    <table class="table">
                                        <tbody>
                                          {% for commande in commandes %}
                                            <tr>
                                                
                                                <td>Commande n°{{commande.id}} du {{commande.date|date("d-m-Y") }}</td>
                                                <td class="td-actions text-right">
                                                    <a href="{{ path('commande', {'id': commande.id })}}"><button type="button" rel="tooltip" title="" class="btn btn-info btn-simple btn-xs" data-original-title="Voir la commnde">
                                                        <i class="fa fa-edit"></i>
                                                    </button></a>
                                                    
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>

                                
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="nav-container">
                            <ul class="nav nav-icons" role="tablist">
                            {% for collection in collections %}
                                <li class="">
                                    <a href="#{{collection.title}}" role="tab" data-toggle="tab">
                                        <i class="fa fa-info-circle"></i><br>
                                        {{collection.title}}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="tab-content">
                            {% for collection in collections %}
                            <div class="tab-pane" id="{{collection.title}}">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Collection {{collection.title}}</h4>
                                        <p class="category">Définition des réductions pro par collection et par produit</p>
                                    </div>

                                    <div class="content">
                                        {% for product in products %}
                                            {% for reduction in reductions %}
                                            {% if reduction.collection == collection and reduction.product == product %}
                                            <div class="row">
                                            <div class="col-md-3">
                                        {{ product.cartname }} </div>
                                        <div class="col-md-6"  > <input type="number" style="max-width:100px" class="form-control" value="{{reduction.reduction}}" id="{{reduction.id}}"></div>
                                        <div class="col-md-3">                                    <button type="submit" onclick="editReduc({{reduction.id}})" class="btn btn-info btn-fill pull-left">Modifier la réduction</button>
                                   </div>
                                   </div>
                                            {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                   
                                    </div>
                                </div>
                            </div>
                            {% endfor %}


                           
                        </div>
                    </div>
                </div>

            </div>






<script>
function editReduc(id){
var newValue = document.getElementById(id).value;

var route = "{{path('editReducCompany',{'id': 'ID', 'montant' : 'MONTANT' } )}}";
route = route.replace("MONTANT", newValue);
route = route.replace("ID", id);


window.location = route;

}
</script>

{% endblock %}

{% block script_chart %}

{% endblock %}
