              {{ product.Color6.name }} /
                {% endif %}
                {% if product.Color7 %}
                {{ product.Color7.name }} /
                  {% endif %}
                  {% if product.Color8 %}
                  {{ product.Color8.name }} /
                    {% endif %}
                    {% if product.Color9 %}
                    {{ product.Color9.name }} /
                      {% endif %}
                      {% if product.Color10 %}
                      {{ product.Color10.name }} /
                        {% endif %}

  </div>
  <div class="mdl-card__actions mdl-card--border">


  <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('changeDefinedProduct', {'id': product.id }) }}">
  {% if product.isactive == false %}

