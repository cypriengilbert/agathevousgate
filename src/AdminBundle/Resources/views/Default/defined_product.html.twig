{% extends 'templateadmin.html.twig' %}{% block script_calcul %}{% endblock %}{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="header">
				<div class="row">
					<div class="col-md-6">
						<h4 class="title">Produits définis</h4>
						<p class="category">
							All
						</p>
					</div>
					<div class="col-md-6">
						<a href="{{ path('addDefinedProduct') }}">
							<button style="text-transform:uppercase" class="btn btn-info btn-fill pull-right"><i class="material-icons">nouveau</i></button>
						</a>
					</div>
				</div>
			</div>
			<div class="mdl-grid demo-content">
				<div class="row">
					{% for product in listeDefinedProduct %}
						<div class="col-md-2" style="min-height:450px;">
							<div class="card card-user" style="height:95%">
								<div class="row" style="height:250px;">
									<div class="col-md-12" style="height:100%;">
										<div class="image" style="width:100%;height:100%;">
											<img src="{{ asset('/upload/image_produit_predefini/' ~ product.imageName ) }}" alt="...">
										</div>
									</div>
								</div>
								<div class="row" style="margin-top:15px;">
									<div class="col-md-12" style="padding:5px;" >
										<div class="content" style="min-height:0px;">
											<div class="author">
												<h4 class="title" style=" background-color:white;min-height:100px;">
													{{product.product.cartname }} - {{ product.collection.title }} <br> {% if product.isactive == false %}
													<i class="fa fa-circle fa-3x" aria-hidden="true" style="color:red; "></i>
													{% endif %}{% if product.isactive == true %}
													<i class="fa fa-circle fa-3x" aria-hidden="true" style="color:green; "></i>
													{% endif %}
													<br>
													<small>
														ID : {{ product.id }}
													</small>
													<br>
												</h4>
											</div>
											<p class="description text-center" style="min-height:65px;">
												{% if product.Color1 %}{{ product.Color1.name }} 
												<br>
												{% endif %}{% if product.color2 %}{{ product.Color2.name }} 
												<br>
												{% endif %}{% if product.Color3 %}{{ product.Color3.name }} 
												<br>
												{% endif %}{% if product.Color4 %}{{ product.Color4.name }} 
												<br>
												{% endif %}{% if product.Color5 %}{{ product.Color5.name }} 
												<br>
												{% endif %}{% if product.Color6 %}{{ product.Color6.name }} 
												<br>
												{% endif %}{% if product.Color7 %}{{ product.Color7.name }} 
												<br>
												{% endif %}{% if product.Color8 %}{{ product.Color8.name }} 
												<br>
												{% endif %}{% if product.Color9 %}{{ product.Color9.name }} 
												<br>
												{% endif %}{% if product.Color10 %}{{ product.Color10.name }} 
												<br>
												{% endif %}
											</p>
											<hr>
											<div class="text-center" style="min-height:50px;">
												<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('changeDefinedProduct', {'id': product.id }) }}">
													{% if product.isactive == false %}
													<button class="btn btn-success  btn-fill pull-right">Activer</button>
													{% endif %}{% if product.isactive == true %}
													<button class="btn btn-danger btn-fill pull-right">Désactiver</button>
													{% endif %}
												</a>
												<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('editDefinedProduct', {'id': product.id }) }}"><button class="btn btn-info btn-fill pull-left">Modifier</button></a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						
						{% endfor %}
					</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}