{% endblock %}

{% block body %}



<div class="mdl-grid demo-content">
<div><h4>Modifier une commande</h4></div>
  <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid" style="padding:20px;">
  {{ form_start(form, {'method': 'post'}) }}
   {{ form_errors(form) }}

   <div class="form-group">
       {{ form_label(form.transportMethod, "Transport", {'label_attr': {'class': ''}}) }}
       {{ form_errors(form.transportMethod) }}
       {{ form_widget(form.transportMethod, {'attr': {'class': 'form-control'}}) }}
   </div>
   <div class="form-group">
       {{ form_label(form.client.prenom, "Prénom", {'label_attr': {'class': ''}}) }}
       {{ form_errors(form.client.prenom) }}
       {{ form_widget(form.client.prenom, {'attr': {'class': 'form-control'}}) }}
   </div>

   <div class="form-group">
       {{ form_label(form.client.nom, "Nom", {'label_attr': {'class': ''}}) }}
       {{ form_errors(form.client.nom) }}
       {{ form_widget(form.client.nom, {'attr': {'class': 'form-control'}}) }}
   </div>

  <div class="form-group">
      {{ form_label(form.client.adress.adress, "Adresse", {'label_attr': {'class': ''}}) }}
      {{ form_errors(form.client.adress.adress) }}
      {{ form_widget(form.client.adress.adress, {'attr': {'class': 'form-control'}}) }}

  </div>
  <div class="form-group">
      {{ form_label(form.client.adress.adressMore, "Informations supplémentaires", {'label_attr': {'class': ''}}) }}
      {{ form_errors(form.client.adress.adressMore) }}
      {{ form_widget(form.client.adress.adressMore, {'attr': {'class': 'form-control'}}) }}

  </div>
  <div class="form-group">
      {{ form_label(form.client.adress.zipcode, "Code postal", {'label_attr': {'class': ''}}) }}
      {{ form_errors(form.client.adress.zipcode) }}
      {{ form_widget(form.client.adress.zipcode, {'attr': {'class': 'form-control'}}) }}

  </div>

  <div class="form-group">
      {{ form_label(form.client.adress.city, "Ville", {'label_attr': {'class': ''}}) }}
      {{ form_errors(form.client.adress.city) }}
      {{ form_widget(form.client.adress.city, {'attr': {'class': 'form-control'}}) }}

  </div>

      <div>
          <button type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</button>
      </div>
  {{ form_end(form) }}

  </div>




{% endblock %}

