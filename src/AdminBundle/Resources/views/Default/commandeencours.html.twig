}"><i class="fa fa-check-square-o fa-2" aria-hidden="true"></i> </a> <a href="{{ path('commande', {'id': commande.id })}}"><i class="fa fa-info-circle fa-2" aria-hidden="true"></i></a></td>
              </tr>

              {% endif %}
