                  <td>{{ collection.description }}</td>
                  <td> {% for color in collection.colors  %}{% if color.isactive == true %} <img src="{{ asset('/upload/color/thumbnail/' ~ color.imageColorName ) }}" style="height:30px; width:30px; margin-right:5px;border-radius:10px">{% endif %}{% endfor %}</td>
                  <td>		<img src="{{ asset('/upload/image_collection/' ~ collection.imageName ) }}" style="width:100%;height:auto">
</td>
