{% extends 'templateadmin.html.twig' %}



{% block script_calcul %}

{% endblock %}

{% block body %}


<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <div class="row">
          <div class="col-md-6">
            <h4 class="title">Stock</h4>
            <p class="category">
              Modifications
            </p>

          </div>  
<div class="col-md-6">
           <a href="{{path('stock_generic')}}"><button  style="text-transform:uppercase; margin-right:20px;" class="btn btn-primary pull-right"><i class="material-icons" type="submit">Voir stocks accessoires</i></button></a>
</div>
                  
        </div>
      </div>
      <div class="content table-responsive table-full-width">
            <ul role="tablist" class="nav nav-tabs">
            <li role="presentation" class="active">
                  <a href="#Basic" data-toggle="tab">Basique</a>
               </li>
               {% for collection in collections %}
               <li role="presentation" class="">
                  <a href="#{{collection.id}}" data-toggle="tab">{{collection.title}}</a>
               </li>
               {% endfor %}
               
            </ul>
            <div class="tab-content">
              

<div id="Basic" class="tab-pane active">
<table id="commande_en_cours" class="table table-striped table-bordered" cellspacing="0" width="100%">
<thead>
         <tr>
         <th>Couleur</th>
            {% for product in products %}
             {% if product.nbColor != 0 %}
             <th>{{ product.name }}</th>
             {% endif %}
             {% endfor %}
         </tr>
     </thead>
     <tbody>
     {% set done = 0 %}

      
        {% for color in colors if color.isBasic %}
            <tr>
              <td style="background:url({{ asset('/upload/color/thumbnail/' ~ color.imageColorName ) }})"></td>
              {% for product in products %}
              {% if product.nbColor != 0 %}
              {% set done = 0 %}

                {% for stock in stocks %}
                  {% if product == stock.product and color == stock.color %}
                  <script>alert('{{stock.color.QuantityAlert}}';alert('{{stock.color.QuantityWarning}}')</script>
                    <td  style="text-align:center;
                    {% if stock.color.QuantityAlert > 0 and stock.color.QuantityWarning > 0  %}
                        {% if stock.quantity < stock.color.QuantityAlert and stock.product.isAlertStock == true %}background-color:red;
                        {% elseif stock.quantity >= stock.color.QuantityAlert and stock.quantity < stock.color.QuantityWarning and stock.product.isAlertStock == true %}background-color:orange;
                        {% else %}{% endif %}
                        {% else %}
                        {% if stock.quantity < 2 and stock.product.isAlertStock == true %}background-color:red;{% elseif stock.quantity >= 2 and stock.quantity < 5 and stock.product.isAlertStock == true %}background-color:orange;{% else %}{% endif %}
                        
                        {% endif %}
                    ">
                      <span id="input_{{color.id}}_{{product.id}}" style="display:none" ><input type="number" id="quantity_{{color.id}}_{{product.id}}" style="height:100%; width:80%;" value="{{ stock.quantity }}">
                        <span style="width:20%;height:100%;background-color:green; cursor:pointer"  onclick="changeQuantity('{{color.id}}', '{{product.id}}')"> 
                          V
                        </span>
                      </span>
                      <span style="display:block; cursor:pointer" id="span_{{color.id}}_{{product.id}}" onclick="openInput('input_{{color.id}}_{{product.id}}', 'span_{{color.id}}_{{product.id}}')">{{ stock.quantity }}</span>
                       </td>
                    {% set done = 1 %}
                  {% endif %}

                {% endfor %}
                {% if done == 0 %}
                  <td style="text-align:center; background-color:red; color:white;">0</td>
                {% endif %}
              {% endif %}

              {% endfor %}
            </tr>
          {% endfor %}


     </tbody>
</table>
</div>

{% for collection in collections %}
<div id="{{collection.id}}" class="tab-pane">
<table id="commande_en_cours" class="table table-striped table-bordered" cellspacing="0" width="100%">
<thead>
         <tr>
         <th>Couleur</th>
            {% for product in products %}
             {% if product.nbColor != 0 %}
             <th><a href="{{path("stockProduct", {'product': product.name})}}">{{ product.name }}</a></th>
             {% endif %}
             {% endfor %}
         </tr>
     </thead>
     <tbody>
     {% set done = 0 %}

      
        {% for color in collection.colors if color.isBasic == false %}
            <tr>
              <td style="background:url({{ asset('/upload/color/thumbnail/' ~ color.imageColorName ) }})"></td>
              {% for product in products %}
              {% if product.nbColor != 0 %}
              {% set done = 0 %}

                {% for stock in stocks %}
                  {% if product == stock.product and color == stock.color %}
                    <td  style="text-align:center;
                    {% if stock.color.QuantityAlert > 0 and stock.color.QuantityWarning > 0 %}
                        {% if stock.quantity < stock.color.QuantityAlert and stock.product.isAlertStock == true %}background-color:red;
                        {% elseif stock.quantity >= stock.color.QuantityAlert and stock.quantity < stock.color.QuantityWarning and stock.product.isAlertStock == true %}background-color:orange;
                        {% else %}{% endif %}
                        {% else %}
                        {% if stock.quantity < 2 and stock.product.isAlertStock == true %}background-color:red;{% elseif stock.quantity >= 2 and stock.quantity < 5 and stock.product.isAlertStock == true %}background-color:orange;{% else %}{% endif %}
                        
                        {% endif %}">
                   
                    
                      <span id="input_{{color.id}}_{{product.id}}" style="display:none" ><input type="number" id="quantity_{{color.id}}_{{product.id}}" style="height:100%; width:80%;" value="{{ stock.quantity }}">
                        <span style="width:20%;height:100%;background-color:green; cursor:pointer"  onclick="changeQuantity('{{color.id}}', '{{product.id}}')"> 
                          V
                        </span>
                      </span>
                      <span style="display:block; cursor:pointer" id="span_{{color.id}}_{{product.id}}" onclick="openInput('input_{{color.id}}_{{product.id}}', 'span_{{color.id}}_{{product.id}}')">{{ stock.quantity }}</span>
                       
                       </td>
                    {% set done = 1 %}
                  {% endif %}

                {% endfor %}
                {% if done == 0 %}
                  <td style="text-align:center; background-color:red; color:white;">0</td>
                {% endif %}
              {% endif %}

              {% endfor %}
            </tr>
          {% endfor %}


     </tbody>
</table>
</div>
        {% endfor %}
            </div>

</div>



</center>
</div>

</div>
</div>

<script>
function changeQuantity(id_color, id_product){
  var quantity = document.getElementById('quantity_'+id_color+'_'+id_product).value;
   $.ajax({
         type: "POST",
         url: "{{ path('editStock')}}",
         data: {id_product: id_product, id_color:id_color, quantity:quantity},
         cache: false,
         success: function(result){
           document.getElementById('span_'+id_color+'_'+id_product).innerHTML = result[0].quantity;
           openInput('span_'+id_color+'_'+id_product, 'input_'+id_color+'_'+id_product);
        }.bind(this),
         error : function(result, statut, erreur){
        }
     });
}

function openInput(id_open, id_close){
  document.getElementById(id_open).style.display = 'block';
 document.getElementById(id_close).style.display = 'none';
}
</script>

{% endblock %}

