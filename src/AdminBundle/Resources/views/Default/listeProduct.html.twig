{% extends 'templateadmin.html.twig' %}{% block script_calcul %}{% endblock %}{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="header">
				<div class="row">
					<div class="col-md-6">
						<h4 class="title">Produits d√©finis</h4>
						<p class="category">
							All
						</p>
					</div>
					<div class="col-md-6">
						
					</div>
				</div>
			</div>
			<div class="mdl-grid demo-content">
				<div class="row">
					{% for product in listeProducts %}
						<div class="col-md-2" style="min-height:450px;">
							<div class="card card-user" style="height:95%">
								<div class="row" style="height:250px;">
									<div class="col-md-12" style="height:100%;">
										<div class="image" style="width:100%;height:100%;">
											<img src="{{ asset('/upload/product/' ~ product.imageProductName ) }}" alt="...">
										</div>
									</div>
								</div>
								<div class="row" style="margin-top:15px;">
									<div class="col-md-12" style="padding:5px;" >
										<div class="content" style="min-height:0px;">
											<div class="author">
												<h4 class="title" style=" background-color:white;min-height:50px;">
													{{product.cartname }}<br> </h4>
													{{product.description}}
													<br>
													<small>
														ID : {{ product.id }}
													</small>
													<br>
												
											</div>
											<div class="text-center" style="min-height:30px;">
												Temps de production : {{product.productTime}}h
											</div>
											<div  class="text-center" style="min-height:30px;">
												<a href="{{ path('editProduct', {'id' : product.id}) }}"><button style="text-transform:uppercase" class="btn btn-success btn-fill"><i class="material-icons">Modifier</i></button></a>
											</div>

											
											
										</div>
									</div>
								</div>
							</div>
						</div>
						
						{% endfor %}
					</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}