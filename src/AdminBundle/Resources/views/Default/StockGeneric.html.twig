{% extends 'templateadmin.html.twig' %}



{% block script_calcul %}

{% endblock %}

{% block body %}


<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <div class="row">
          <div class="col-md-6">
            <h4 class="title">Stock</h4>
            <p class="category">
              Modifications
            </p>

          </div>  
<div class="col-md-6">
           <a href="{{path('stock')}}"><button  style="text-transform:uppercase; margin-right:20px;" class="btn btn-primary pull-right"><i class="material-icons" type="submit">Voir stocks</i></button></a>
</div>
                  
        </div>
      </div>
      <div class="content table-responsive table-full-width">
        <div class="toolbar">
          <!--Here you can write extra buttons/actions for the toolbar-->
        </div>
<table id="commande_en_cours" class="table table-striped table-bordered" cellspacing="0" width="100%">
<thead>
         <tr>
         <th>Couleur</th>
            {% for product in products %}
             <th width="16%"><a href="{{path("stockProduct", {'product': product.name})}}">{{ product.name }}</a></th>
             {% endfor %}
         </tr>
     </thead>
     <tbody>
     {% set done = 0 %}

            <tr>
              <td style="">No color</td>
              {% for product in products %}
              
              {% set done = 0 %}

                {% for stock in stocks %}
                  {% if product == stock.product %}
                    <td  style="text-align:center;{% if stock.quantity < 2 %}background-color:red;{% elseif stock.quantity >= 2 and stock.quantity < 5 %}background-color:orange;{% else %}{% endif %}">
                    
                      {{ stock.quantity }}
                       </td>
                    {% set done = 1 %}
                  {% endif %}

                {% endfor %}
                {% if done == 0 %}
                  <td style="text-align:center; background-color:red; color:white;">0</td>
                {% endif %}

              {% endfor %}
            </tr>

     </tbody>
</table>

</div>



</center>
</div>

</div>
</div>



{% endblock %}

{% block script_chart %}

{% endblock %}
