{% extends 'templateadmin.html.twig' %}



{% block script_calcul %}

{% endblock %}

{% block body %}



<div class="mdl-grid demo-content">
<div><h4>Image</h4></div>

<div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">

<!-- Square card -->
<style>
.demo-card-square.mdl-card {
  width: 320px;
  height: 320px;
  margin: 10px;
}
.demo-card-square > .mdl-card__title {
  color: #fff;

}
</style>

{% for image in images %}

<div class="demo-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand" style="background:url({{ asset('/upload/image_site/' ~ image.imageName ) }}) bottom right 15% no-repeat #46B6AC; max-height:100%; width:auto; background-size: cover;">

  <h4 class="mdl-card__title-text" style="position:absolute; top:5px; left: 5px;background-color:rgba(200,200,200, 0.8)">{{ image.name }}</h4>

  <h2 class="mdl-card__title-text">{{ image.id }}</h2>
  </div>
  <div class="mdl-card__supporting-text">
  </div>
  <div class="mdl-card__actions mdl-card--border">




    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('editImage', {'id': image.id }) }}">
      Modifier
    </a>


  </div>
</div>
{% endfor %}
</div>
</div>



{% endblock %}

