        <div>
            <i style="position:relative; bottom:18px; left:35px" class="fa fa-minus fa-1" aria-hidden="true">
            </i>
        </div>
    </a>
      {% endif %}
</p>


                                </div>
              </div>              </div>
</div>
                            <div class="col-md-1 delete_icon" >
                            <p >
                          <style>
                          .delete{
                            background:none;
                            border:none;
                            font-size:1em;

                          }
</style>

                            {% if listepanier.id %}
                                <button class="delete"  onclick="this.disabled=true; window.location = '{{ path("deleteproduct",{"id":listepanier.id} ) }}';" >
                                    <i class="fa fa-trash-o" aria-hidden="true" ></i>
                                </button>

                            {% else  %}

                                <a class="delete" href="{{ path('deleteproduct_session',{'id':numero_ligne} ) }}" onclick="this.href='#'; window.location = 'http://www.yoururl.com';" >
                                    <i class="fa fa-trash-o" aria-hidden="true" ></i>

                                </a>
                            {% endif %}
                            </p>
                            </div>
                                                </div>

                        {% set numero_ligne = numero_ligne + 1 %}
                        {% endfor %}
                        </div>

                        <div class="col-md-3">
                        <div class="col-md-12"  style="border:1px solid #A94141">
                            <div class="row">
                            <div class="col-xs-7 " style="">
                                <p></p>
                                <p>Sous-total</p>
{% if is_granted('ROLE_USER') %}

                                <p> {% if nbcommande == 0 and app.user.parrainEmail is not null %}Parrainage{% else %}Remise{% endif %}</p>

{% else %} <p> Remise </p>
{% endif %}

                                <p>Total</p>
                            </div>
                            <div class="col-xs-5" >
                                <p></p>
                                <p class="text-right"><strong>  {{ totalsum }} €</strong></p>
                                {% set codePromo = app.session.get('codePromo') %}
                                    {% if codePromo %}
                                        {% if codePromo.minimumCommande <= totalsum %}
                                            {% if codePromo.genre == 'pourcentage' %}

                                                {% set remise = totalsum * codePromo.montant / 100 %}

                                            {% elseif codePromo.genre  == 'remise' %}
                                                {% set remise = codePromo.montant %}
                                            {% elseif codePromo.genre  == 'fdp' %}
                                            {% elseif codePromo.genre  == 'fdp-remise' %}
                                                {% set remise = codePromo.montant %}
                                            {% endif %}
                                            <p class="text-right"><strong> - {{ remise|round(2, 'floor') }} €</strong></p>
                                            {% set totalsum = totalsum - remise|round(2, 'floor') %}

                                        {% else %}
                                        <p class="text-right">0 €</p>
                                      {% endif %}
     {% elseif nbcommande == 0 and is_granted('ROLE_USER') %}
    {% if app.user.parrainEmail is not null %}
  {% set remise = totalsum * (parrainage.montant / 100) %}
<p class="text-right"><strong > - {{ remise|round(2, 'floor') }} €</strong></p>
  {% set totalsum = totalsum - remise|round(2, 'floor') %}
{% endif %}
                                     {% else %}

                                     <p class="text-right">0 € </p>

                                    {% endif %}





                                    {% if codePromo %}

                                        {% if codePromo.minimumCommande <= totalsum %}

                                          {% if codePromo.genre == 'fdp' %}

                                            {% elseif codePromo.genre  == 'fdp-remise' %}
                                                {% set remise = codePromo.montant %}


                                          {% endif %}

                                        {% endif %}


                                    {% endif %}
                                <p class="text-right"> <strong>  {{ totalsum }} €</strong></p>
                            </div>
                            </div>
                        </div>
                        <div class="col-md-12" style="position:relative">
                            <div class="col-md-4" style="">
                                <input type="text" id="input_promo" placeholder="XXXXX" style=" height:31px; position:absolute; left:-15px ;" {% if is_granted('ROLE_USER') %}
{% if nbcommande == 0 and app.user.parrainEmail is not null %} disabled {% endif %}{% endif %}>
                            </div>

                            <a onclick="verifCode()"> <div class="col-md-8" style="background-color:#A94141;cursor:pointer; height:31px;position:absolute;width:75%; right:0px; top:-1px; {% if is_granted('ROLE_USER') %}{% if nbcommande == 0 and app.user.parrainEmail is not null %} opacity:0.5; cursor:auto;{% endif %} {% endif %}">
                            <div class="col-md-12">
                             <center>  <p style="color:white; position:absolute; top:5px; font-size:15px; left:5px"> Valider le coupon </p></center>
                             </div>

                            </div>
                            </a>                       </div>
                        <div class="col-md-12" style="position:relative; top:29px;height:30px; background-color:#242258" >
                            <div class="col-md-3">
                            </div>

                            <div class="col-md-6">
                                <a href="{{ path('choixlivraison') }}"><p style="color:white; position:absolute; top:5px; "><span class="glyphicon glyphicon-shopping-cart"></span> Payer </p></a>
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                        </div>
                </div>
            </div>
        </div>
        {% endif %}
