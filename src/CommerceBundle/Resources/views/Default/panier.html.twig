{% elseif listepanier.product.name == 'Coffret1' %}

        <div id="coffret_big_1" class="coffret_big_1" style="margin-top:25px;max-height:100px;background:url({{ asset('/upload/color/tissu/grand/' ~ listepanier.Color1.tissuColorName )}});"></div>



{% elseif listepanier.product.name == 'Coffret2' %}

