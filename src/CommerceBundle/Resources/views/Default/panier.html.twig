<div id="coffret_big_2" class="coffret_big_2" style="margin-top:-25px;max-height:100px;background:url({{ asset('/upload/color/pochette/'~ listepanier.Color1.couleurPochetteName )}});"></div>

{% elseif listepanier.product.name == 'Boutons' %}
<div id="coffret_big_2" class="coffret_big_2" style="margin-top:-25px;max-height:100px; background-size:contain;  background:url({{ asset('/upload/color/boutons/' ~ listepanier.Color1.couleurBoutonsName)}}) no-repeat;"></div>


{% endif %}
    </div>


                            </div>
                            <div class="col-md-8" class="objectpanier" style="">
                                <div style="height:200px; width:100%; position:relative">
