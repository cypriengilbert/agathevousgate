<script>
function verifCode(){
var codepromo = document.getElementById("input_promo").value;
{% set codepromo_twig %}codepromo{% endset %}

var url = "{{ path('panier', { 'code': 'twig' }) }}";
url = url.replace("twig", codepromo);
window.location.replace(url);


}

</script>


